<section class="">
    <div class="row content d-flex justify-content-center w-100 m-0">
        <div class="col-md-4">
            <div class="box shadow bg-white p-4 rounded-4 mt-3 mx-auto">
                <h3 class="mb-4 text-center fs-1">Login</h3>

                <p class="text-danger font-weight-bold">
                    <b>
                        <%=error%>
                    </b>
                </p>


                <form action="/login" method="post" class="mb-3">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" name="email" />
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" name="password" />
                    </div>
                    <div class="form-group mt-3 d-grid">
                        <button class="btn btn-info" type="submit">Login</button>
                    </div>
                </form>
            </div>
            <div class="d-flex gap-2 px-3 py-2 flex-wrap">
                <h5>Do you have any account?</h5>
                <a href="/register">Register now</a>
            </div>
        </div>
    </div>
</section>