<section class="sproduct">
    <div class="row">
        <div class="col-lg-5 col-md-12 col-12 max-h-50">
            <img class="img-fluid" src="/images/uploades/<%=mobile.image %>" alt="">
        </div>
        <div class="col-lg-5 col-md-12 col-12 mx-5 ">
            <h3 class="mt-5">
                <%=mobile.name%>
            </h3>
            <h5 style="font-size:medium" class="my-3">Price: <%=mobile.price%>
            </h5>
            <input type="number" value="1">
            <a href="/mobiles/add-to-cart/<%=mobile.id%>"><button type="button"
                    class="buy-button btn btn-warning px-4">ADD TO CART</button></a>
            <h5 class="mt-lg-5 mt-md-3 mt-1">Description</h5>
            <p class="mt-3">
                <%=mobile.description%>
            </p>


        </div>
    </div>
</section>