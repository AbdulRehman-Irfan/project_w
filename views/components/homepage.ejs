<section id="home">
    <div class="container">
        <h5>
            NEW ARRIVALS
        </h5>
        <h1><span>WE HAVE</span> BEST MOBILES</h1>
        <p>Our shop have mobiles of all brands
            <br> in awesome prices.
        </p>
        <button class="btn btn-outline-secondary "><a href="/mobiles" class="home-btn">SHOP NOW</a></button>

    </div>
</section>

<section class="latest mt-0 pb-5">
    <div class="container text-center mt-0 py-5">
        <h2>
            Latest Mobiles
        </h2>
        <p>Here you can check out latest mobiles with fair prices</p>

    </div>
    <div class="row align-items-center justify-content-center gap-4 m-0">
        <% for (let i=0 ; i<3 ;i++) { %>
            <div class="col-md-3">
                <div class="card">
                    <img class="card-img-top" src="/images/uploades/<%=mobiles[i].image %>" alt="">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=mobiles[i].name%>
                        </h5>
                        <p class="card-text">
                            <%=mobiles[i].description%>
                        </p>
                        <p class="card-text font-weight-bold"><b>Price:</b>
                            <%=mobiles[i].price%>
                        </p>
                        <p class="card-text font-weight-bold"><b>RAM:</b>
                            <%=mobiles[i].RAM%>
                        </p>
                        <p class="card-text font-weight-bold"><b>ROM:</b>
                            <%=mobiles[i].ROM%>
                        </p>
                        <a href="/mobiles/<%=mobiles[i].id%>"><button type="button"
                                class="btn btn-primary px-3">View</button></a>
                        <a href="/mobiles/add-to-cart/<%=mobiles[i].id%>"><button type="button"
                                class="btn btn-warning px-3">Add to Cart</button></a>
                    </div>
                </div>
            </div>
            <% } %>
    </div>
</section>

       